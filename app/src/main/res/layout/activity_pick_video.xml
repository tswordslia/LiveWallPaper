<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242424"
    tools:context="com.example.tswords.livewallpaper.Activity.PickVideoActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp" />
    <android.support.constraint.ConstraintLayout
        android:fitsSystemWindows="true"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp">
        <ImageView
            android:background="@drawable/shape"
            android:id="@+id/finish_activity"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_chevron_left_white_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/example_button"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintVertical_bias="0.462"
            android:layout_marginStart="15dp" />
        <Button
            android:id="@+id/local_video"
            android:textColor="@color/white"
            android:background="@drawable/button_oval_transparent_corner"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="本地视频"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            android:layout_marginStart="5dp" />
        <Button
            android:textColor="@color/white"
            android:id="@+id/example_button"
            android:background="@drawable/button_oval_corner"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="示例资源"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toLeftOf="@+id/guideline3"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="192dp" />


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
