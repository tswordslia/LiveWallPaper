<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242424">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:textSize="13sp"
        android:textColor="#fff"
        android:text="静音"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/isScience"
        android:layout_alignBaseline="@+id/menuTextName"
        android:layout_alignBottom="@+id/menuTextName"
        android:layout_alignStart="@+id/imageVoice"
        android:layout_alignEnd="@+id/imageVoice" />
    <ImageView
        android:id="@+id/imageVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:background="@drawable/shape"
        app:srcCompat="@drawable/ic_volume_off_black_24dp"

        android:layout_alignTop="@+id/imageMenu"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp" />

    <TextView
        android:textSize="13sp"
        android:textColor="#fff"
        android:text="菜单"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuTextName"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageMenu"
        android:layout_alignEnd="@+id/imageMenu" />
    <ImageView
        android:id="@+id/imageMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:background="@drawable/shape"
        app:srcCompat="@drawable/ic_menu_24dp"

        android:layout_marginStart="15dp"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/menuTextName"
        android:layout_alignParentStart="true" />
</RelativeLayout>